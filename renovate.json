{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "flux": {
    "managerFilePatterns": ["\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": [ "\\.yaml$"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)release\\.ya?ml$"
      ],
      "matchStrings": [
        "registryUrl:\\s+(?<registryUrl>[^\\s]*?)\\s+chart:\\s+(?<depName>[^\\s]*?)\\s+version:\\s+\"(?<currentValue>[^\"]*?)\""
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)release\\.ya?ml$"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    }
  ]
}
