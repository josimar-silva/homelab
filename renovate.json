{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    "abandonments:recommended",
    "group:recommended",
    "replacements:all",
    "workarounds:all",
    "mergeConfidence:age-confidence-badges",
    ":configMigration",
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers"
  ],
  "prHourlyLimit": 10,
  "reviewers": [
    "josimar-silva"
  ],
  "labels": [
    "automated",
    "dependencies"
  ],
  "flux": {
    "managerFilePatterns": [
      "(^|/)[^/]*\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "(^|/)[^/]*\\.ya?ml$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "(^|/)release\\.ya?ml$"
      ],
      "matchStrings": [
        "#renovate:\\s*registryUrl=(?<registryUrl>[^\\s]*?)[\\s]*?chart:\\s+(?<depName>[^\\s]*?)[\\s]*?version:\\s+[\"']?(?<currentValue>[^'\"]*?)[\"']?(?:^|\r\n|\r|\n|$)"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "(^|/)(release|chart)s?\\.ya?ml$"
      ],
      "matchStrings": [
        "#renovate:\\s*registryUrl=oci:\\/\\/(?<registryUrl>[^\\s]+)[\\s]*?chart:\\s+(?<depName>[^\\s]+?)[\\s]*?version:\\s+[\"']?(?<currentValue>[^'\"\\s]+)[\"']?"
      ],
      "packageNameTemplate": "{{registryUrl}}/{{depName}}",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "(^|/)release\\.ya?ml$"
      ],
      "matchStrings": [
        "repository:\\s*[\"']?(?<repository>[^\"'\\s]+)[\"']?\\s*tag:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
      ],
      "packageNameTemplate": "{{repository}}",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "(^|/)kustomization\\.ya?ml$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=github-releases\\s+depName=(?<depName>[^\\s]+)[\\s\\S]*?-\\s*https://github.com/[^/]+/[^/]+/releases/download/v(?<currentValue>[^/]+)/[^\\s]+"
      ],
      "datasourceTemplate": "github-releases"
    }
  ]
}
