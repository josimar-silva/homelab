{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "flux": {
    "managerFilePatterns": ["\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)release\\.ya?ml$"],
      "matchStrings": [
        "^\\s*#renovate:\\s*registryUrl=(?<registryUrl>[^\\s]*?)\\s+chart:\\s+(?<depName>[^\\s]*?)\\s+version:\\s+\"(?<currentValue>[^\"]*?)\""
      ],
      "datasourceTemplate": "helm"
    }
  ]
}
